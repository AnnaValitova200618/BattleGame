<Window x:Class="EEEeee.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EEEeee.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="650">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Foto/1587479914_18-p-foni-pro-ad-46.jpg"/>
        </Grid.Background>

        <TextBlock Text="Приветствуем Вас в легендарной игре, где вам придётся убивать друг друга" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="22" Height="70" Width="470" TextAlignment="Center"
                   TextWrapping="Wrap" Foreground="White"/>
        <Button Content="ХОЧУ ИГРАТЬ!" Command="{Binding OpenGame}" VerticalAlignment="Bottom" Width="115" Height="25" Margin="0,0,0,20" BorderBrush="#FFDADADA" Background="#FFFFCECE" FontWeight="Bold"/>
       
    </Grid>
</Window>
